<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/listFragment">
    <!--    <fragment-->
    <!--        android:id="@+id/loginFragment"-->
    <!--        android:name="com.app.todoapp.presentation.login.LoginFragment"-->
    <!--        android:label="fragment_login"-->
    <!--        tools:layout="@layout/fragment_login"/>-->

    <fragment
        android:id="@+id/listFragment"
        android:name="com.app.todoapp.presentation.list.ListFragment"
        android:label="fragment_list"
        tools:layout="@layout/fragment_list">
        <action
            android:id="@+id/action_listFragment_to_noteFragment"
            app:destination="@id/createFragment"
            app:popUpTo="@id/createFragment"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/action_listFragment_to_noteSelectedFragment"
            app:destination="@id/noteSelectedFragment"
            app:popUpTo="@id/createFragment"
            app:popUpToInclusive="true" />

    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.app.todoapp.presentation.settings.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/createFragment"
        android:name="com.app.todoapp.presentation.note.CreateFragment"
        android:label="fragment_note"
        tools:layout="@layout/fragment_create">
        <action
            android:id="@+id/action_createFragment_to_listFragment"
            app:destination="@id/listFragment" />
    </fragment>
    <fragment
        android:id="@+id/noteSelectedFragment"
        android:name="com.app.todoapp.presentation.noteSelected.NoteSelectedFragment"
        android:label="fragment_note_selected"
        tools:layout="@layout/fragment_note_selected">

        <action
            android:id="@+id/action_noteSelectedFragment_to_listFragment"
            app:destination="@id/listFragment" />

        <argument
            android:name="noteId"
            app:argType="integer" />

        <argument
            android:name="title"
            app:argType="string" />

        <argument
            android:name="note"
            app:argType="string" />

    </fragment>
</navigation>